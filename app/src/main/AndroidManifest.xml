            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".MahaMantra"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Hare Krishna"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".OmMantra"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Om Mantra"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".AchyutamKeshavam"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Achyutam Keshavam"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".BadaNatkhatHaiKrishnaKanhaiya"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Bada Natkhat Hai Krishna Kanhaiya"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".HaiGopalMeroHai"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Govind Mero Hai"
